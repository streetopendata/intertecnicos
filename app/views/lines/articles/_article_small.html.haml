%div{:class => "article #{article_class}"}
  - cache "#{article_small}_small" do
    - unless article_small.image_url.blank?
      .hero_image
        = link_to article_path(article_small) do
          %img{:alt => "#{article_small.title}", :src => "#{article_small.image_url}"}/
    .article_header
      %h1= link_to article_small.title, article_path(article_small)
      %h2= article_small.sub_title
      .author_name
        %span by
        = display_article_authors(article_small)
    .article_teaser
      = render_teaser(article_small).html_safe
      .more-link
        = link_to "Read full article", article_path(article_small)

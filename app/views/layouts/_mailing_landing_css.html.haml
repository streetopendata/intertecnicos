:css
    img.icon-form {
        width: 2.7vw;
        margin-right: 11px;
    }
    .inp-landing {
      width: 100%;
      padding: 8px 12px;
      border-radius: 3px;
    }


    .text-form{
      font-size: 26px;
      line-height: 1;
      padding: 0 32px 0 0px;

    }
    p{
        text-align: justify;
    }


    .title-container {
      position: relative;
    }

    .image-overlay {
      position: absolute;
      background: rgb(255, 255, 255);
      background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0) 0%,
        rgba(2, 116, 112, 0.3841911764705882) 60%,
        rgba(2, 116, 127, 0.6334908963585435) 100%
      );
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    .title-container h1 a {
      color: #ffffff;
      text-align: left;
    }

    .title-container .article_header {
      text-align: left;
      color: #fff;
    }

    .title-container-detail .article_header_list {
      text-align: center;
      color: #fff;
      text-transform: uppercase;
    }

    .title-container-detail .article_header_list h1 {
      font-size: 2.5em;
      font-weight: 600;
      line-height: 120%;
      color: #ffffff;
      margin-bottom: 20px;
      font-family: Quicksand-Bold, sans-serif !important;
    }

    .title-container .article_header h1 {
      font-size: 2.5em;
      font-weight: 600;
      line-height: 120%;
      color: #ffffff;
      margin-bottom: 20px;
      font-family: Quicksand-Bold, sans-serif !important;
    }

    .title-container .article_header h2 {
      font-size: 1.3em;
      font-weight: 400;
      color: #ffffff;
      line-height: 120%;
      margin-top: 5px;
    }

    #share-button {
      position: absolute;
      bottom: 0;
      right: 0;
      max-width: 35px;
      cursor: pointer;
    }

    .title-container {
      position: relative;
      width: 100%;
      top: 0;
      min-height: 95vh;
      background-attachment: fixed !important;
      background-position: center !important;
      background-size: cover !important;
    }

    .title-container-detail {
      position: relative;
      width: 100%;
      top: 0;
      min-height: 60vh;
      background-attachment: fixed !important;
      background-position: center !important;
      background-size: cover !important;
    }
    .author_name {
      margin: 5vh 0;
      text-transform: capitalize;
      color: #00747f;
      font-family: "Quicksand-Variable";
      font-size: 1.3em;
    }

    .article .article_content {
      line-height: 1.9em;
      text-align: justify;
    }

    .article .article_content h2 {
      font-size: 2em;
      font-family: "Quicksand-Variable";
    }

    hr {
      background-color: #00747f !important;
      margin-bottom: 10px !important;
    }

    .article .article_footer {
      margin: 2em 13%;
      line-height: 130%;
      font-family: "Quicksand-regular";
      color: #9793a0;
      text-align: center;
      text-transform: capitalize;
    }

    .bg-related {
      background-color: #f2f2f2;
    }

    h1.title-related {
      font-family: "Quicksand-regular";
      font-size: 2em;
      font-weight: 100;
      margin-bottom: 30px;

      strong {
        font-weight: 700;
        font-family: "Quicksand-Bold";
      }
    }

    .article.small {
      max-width: 35%;
    }

    div#articles {
      display: flex;
      justify-content: space-between;
      flex: 1;
    }

    .article .hero_image a,
    .article .hero_image img {
      max-height: 25vh;
      width: 85%;
    }

    .article.small .article_header h1 {
      font-size: 2rem !important;
      font-family: "Quicksand-Medium";
      text-align: justify;
      margin: 10px 0;
      min-height: 10vh;
      max-height: 10vh;
      text-overflow: ellipsis;
      white-space: pre-wrap;
      overflow: hidden;
    }

    .article.small .article_teaser p {
      font-size: 1.5rem !important;
      line-height: 1.2;
      min-height: 30vh;
      text-align: justify;
      word-break: break-all;
    }

    .article .article_header h1 a:hover {
      color: #00747f;
    }

    .whatsapp {
      position: fixed;
      width: 45px;
      height: 45px;
      bottom: 25px;
      right: 40px;
      background-color: #25d366;
      color: #fff;
      border-radius: 50px;
      text-align: center;
      font-size: 30px;
      z-index: 100;
    }

    .whatsapp-icon {
      top: -3px;
      position: relative;
    }

    .rigth-footer {
      align-items: flex-end;
      display: flex;
      right: 0;
      display: flex;
      flex-direction: column;
    }

    .icon-footer {
      max-width: 25px;
      margin-right: 8px;
      font-family: "Quicksand-Bold";
    }

    li.li-footer {
      margin-bottom: 20px;
      display: flex;
    }

    .love-e {
      display: flex;
      justify-content: space-between;
    }

    .footer {
      p {
        font-size: 16px !important;
      }
    }



    .share-container-mobile img {
      width: 20px;
      position: absolute;
      right: 5.5vw;
      top: 4vh;
    }

    .article_footer.container-blog {
        flex-direction: column;
    }
    .article_footer.container-blog p {
        font-size: 1em;
    }


    .js-side-menu-open {
        display: none;
    }


    /************************************************************************************
    smaller than 975px
    *************************************************************************************/
    @media screen and (max-width: 990px) {
      header {
        padding-left: 1.5em;
        padding-right: 1.5em;
      }
    }

    /************************************************************************************
    smaller than 800px
    *************************************************************************************/
    @media screen and (max-width: 800px) {
      html,
      body {
        font-size: 16px;
      }
      .article {
        .article_header,
        .article_teaser,
        .article_content {
          & > * {
            padding: 0 8%;
          }
        }
      }
    }

    /************************************************************************************
    smaller than 600px
    *************************************************************************************/
    @media screen and (max-width: 600px) {
      html,
      body {
        font-size: 14px;
      }
      .article.small {
        width: 100%;
        max-width: 100%;
      }
    }

    /************************************************************************************
    smaller than 480px
    *************************************************************************************/
    @media screen and (max-width: 480px) {
      html,
      body {
        font-size: 14px;
      }
      .article {
        .article_header h1 {
          font-size: 2.5em;
        }
      }


      .whatsapp {
        right: 2vw;
        width: 35px;
        height: 35px;
      }

      .whatsapp-icon {
        top: -10px;
        font-size: 23px !important;
        position: relative;
      }

      .article.small .article_header h1 {
          min-height: none;
          max-height: none;
      }

      h1.title-related {
        text-align: center;
      }

      .rigth-footer {
        align-items: revert;
      }

      .title-container-detail {
          min-height: 35vh;
      }


    }

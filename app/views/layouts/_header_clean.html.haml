.nt-section
  .container-fluid.pl-0.pr-0
    .row.no-gutters
      .nt-column.col-sm-12
        %header#top-bar.top-bar.top-bar--dark.nt-shortcode-header{"data-nav-anchor" => "true", "data-res-css" => "       #nt-logo.top-bar__logo.site-logo img { width:159px; } #nt-logo.top-bar__logo.site-logo img { height:45px; }  ", :style => "position: fixed;background: #fff;top: 0;padding: 0;"}
          .top-bar__inner
            .container-fluid
              .row.align-items-center.no-gutters
                %a#nt-logo.top-bar__logo.site-logo{:href => root_url }
                  =image_tag 'logo.svg', class: 'img-fluid main-logo img-logo-style'
                %a#top-bar__navigation-toggler.top-bar__navigation-toggler{:href => "javascript:void(0);"}
                  %span
                .top-bar__collapse
                  %nav#top-bar__navigation.top-bar__navigation

                  #top-bar__action.top-bar__action
                    .d-xl-flex.flex-xl-row.flex-xl-wrap.align-items-xl-center
                      .top-bar__auth-btns
                        - if customer_signed_in? || admin_signed_in?
                          = link_to 'Salir', admin_signed_in? ? destroy_admin_session_path : destroy_customer_session_path , method: :delete ,  style: 'align-self: center;'
                        - else
                          = link_to 'Iniciar', new_customer_session_path , style: 'align-self: center;'
                        - if !customer_signed_in? && !admin_signed_in?
                          = link_to 'Registrarme', new_customer_registration_path , style: 'align-self: center;'

                      .top-bar__side-menu-button.js-side-menu-open
                        %span.line
                        %span.line
                        %span.line
          = render 'layouts/alerts'
